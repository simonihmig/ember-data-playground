<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>Username</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Company</th>
  </tr>
  </thead>
  <tbody>
  {{#each this.users as |user|}}
  {{log user.department}}
    <tr>
      <td>{{user.username}}</td>
      <td>{{user.firstName}}</td>
      <td>{{user.lastName}}</td>
      <td>{{user.email}}</td>
      <td>{{user.department.company.name}} / {{user.department.name}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
