<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Departments</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.companies as |company|}}
      <tr>
        <td>{{company.name}}</td>
        <td>{{#each company.departments as |department|}}{{department.name}} {{/each}}</td>
        <td>
          {{#link-to "company.edit" company class="btn btn-secondary"}}Edit{{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
